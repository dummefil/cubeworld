{
  "name": "cubeworld",
  "version": "1.0.0",
  "author": "natch",
  "license": "ISC",
  "description": "Copy-cat of famous game written on js/ts and three.js",
  "scripts": {
    "dev": "webpack serve --stats-error-details",
    "build": "webpack",
    "watch": "tsc -w",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "start": "npm run build && electron electron/index.js",
    "electron": "electron electron/index.js",
    "dist": "npm run build && electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dummefil/cubeworld.git"
  },
  "devDependencies": {
    "@types/dat.gui": "^0.7.7",
    "@types/three": "^0.133.1",
    "@types/three-dat.gui": "^2.0.1",
    "csstype": "^3.0.10",
    "electron-builder": "^26.0.12",
    "shader-loader": "^1.3.1",
    "ts-loader": "^9.2.6",
    "ts-shader-loader": "^1.0.6",
    "typescript": "^5.9.2",
    "webpack": "^5.65.0",
    "electron": "^37.2.6",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.7.1"
  },
  "three": "^0.134.0",
  "dependencies": {
    "ammo.js": "^0.0.10",
    "cannon-es": "^0.18.0",
    "three": "^0.179.1",
    "three-to-cannon": "^4.0.2"
  },
  "main": "electron/index.js",
  "build": {
    "appId": "com.yourname.cubeworld",
    "productName": "CubeWorld",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "index.html",
      "skybox/**/*",
      "sounds/**/*",
      "textures/**/*",
      "UI/**/*",
      "models/**/*"
    ],
    "win": {
      "target": "nsis"
    }
  }
}
