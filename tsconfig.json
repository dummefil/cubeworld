{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,

    "lib": ["es2015", "dom"],
    "baseUrl": ".",
    "resolveJsonModule": true,
    "paths": {
      "src/*": ["src/*"]
    },
    // Gives error if there are implied "<any>" types.
    "noImplicitAny": true,

    // Allows you to access non-constant properties, such as object[keyVar]
    "suppressImplicitAnyIndexErrors": true
  },
  "exclude": ["node_modules"],
  "stats": {
    "errorDetails": true
  }
}
