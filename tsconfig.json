{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,

    "lib": ["es2015", "dom"],
    "baseUrl": ".",
    "resolveJsonModule": true,
    "paths": {
      "src/*": ["src/*"]
    },
    "noImplicitAny": true,
  },
  "exclude": ["node_modules"],
  "stats": {
    "errorDetails": true
  }
}
